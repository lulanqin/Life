<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_BookList_img"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_BookList_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_BookList_img"
        android:layout_alignTop="@+id/iv_BookList_img"
        android:layout_marginLeft="20dp"
        android:text="name"
        android:textColor="@color/darkBlack"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_BookList_author"
        android:layout_alignLeft="@+id/tv_BookList_name"
        android:layout_below="@+id/tv_BookList_name"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:textColor="@color/darkGray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_BookList_summary"
        android:layout_alignLeft="@+id/tv_BookList_name"
        android:layout_below="@+id/tv_BookList_author"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:lines="3"
        android:text="summary"
        android:textColor="@color/darkGray"
        android:textSize="12sp" />

</RelativeLayout>