<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_BookDetail_name1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#393939"
            android:textSize="18sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_announce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#2cc7c5"
            android:paddingLeft="20dp" />
    </RelativeLayout>


    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>

    <com.cruse.myrxjavademo.service.view.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_BookDetail_img"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@mipmap/ic_launcher"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_BookDetail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_BookDetail_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_BookDetail_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="12sp" />

            <com.cruse.myrxjavademo.service.view.CustomListView
                android:id="@+id/lv_BookDetail_chapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:divider="@null" />

        </LinearLayout>


    </com.cruse.myrxjavademo.service.view.VerticalScrollView>


</LinearLayout>
